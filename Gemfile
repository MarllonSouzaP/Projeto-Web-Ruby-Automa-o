source 'https://rubygems.org'

gem 'cucumber', '~> 2.4'
#Phantomjs via Rubygems: Auto-install phantomjs on demand for current platform. Comes with poltergeist integration.
gem 'phantomjs', '< 3.0'
#A PhantomJS driver for Capybara
gem 'poltergeist'
#Easy installation and use of PhantomJS.
gem 'phantomjs-helper'
#Acceptance test framework for web applications
gem 'capybara', '2.13.0'
#SitePrism gives you a simple, clean and semantic DSL for describing your site using the Page Object Model pattern, for use with Capybara
gem "site_prism"
#WebDriver is a tool for writing automated tests of websites. It aims to mimic the behaviour of a real user, and as such interacts with the HTML of the application.
gem 'selenium-webdriver', '~> 3.8'
#When a Cucumber step fails, it is useful to create a screenshot image and HTML file of the current page
gem 'capybara-screenshot'
#Easy installation and use of chromedriver, the Chromium project's selenium webdriver adapter.
gem "chromedriver-helper"
#Easy installation and use of geckodriver, that provides the HTTP API described by the WebDriver protocol to communicate with Gecko browsers, such as Firefox
gem 'geckodriver-helper'
#BDD for Ruby
gem 'rspec'
# A make-like build utility for Ruby.
gem 'rake'
#An IRB alternative and runtime developer console
gem "pry"

